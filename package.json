{
  "name": "tileserver-gl-pkg",
  "version": "1.7.0",
  "description": "Map tile server for JSON GL styles (bundled into executable using pkg) - vector and server side generated raster tiles",
  "main": "src/main.js",
  "bin": "src/main.js",
  "authors": [
    "Petr Sloup <petr.sloup@klokantech.com>",
    "Nick Buchanan <nbuchanan@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nbuchanan/tileserver-gl.git"
  },
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">=4.2.1 <5"
  },
  "scripts": {
    "copy-pkg-data": "copyfiles -f data/* packages/data",
    "copy-pkg-deps": "npm run copy-pkg-data -s && copyfiles -f ./package-inputs/* ./node_modules/**/*.node packages",
    "package": "npm run copy-pkg-deps -s && pkg . --targets node4 --out-dir packages",
    "package-light": "npm run copy-pkg-deps -s && node build-light-pkg.js && cd light && npm install && pkg . --targets node4 --out-dir packages && copyfiles 'fonts/**' 'styles/**' packages",
    "test": "mocha test/**.js"
  },
  "dependencies": {
    "@mapbox/mapbox-gl-native": "3.4.4",
    "@mapbox/sphericalmercator": "1.0.5",
    "advanced-pool": "0.3.2",
    "base64url": "2.0.0",
    "canvas": "1.6.5",
    "clone": "2.1.1",
    "color": "1.0.3",
    "cors": "2.8.3",
    "express": "4.15.2",
    "gdal-mbt": "0.9.4",
    "glyph-pbf-composite": "0.0.2",
    "handlebars": "4.0.8",
    "http-shutdown": "^1.2.0",
    "mbtiles": "0.9.0",
    "morgan": "1.8.1",
    "node-pngquant-native": "1.0.4",
    "nomnom": "1.8.1",
    "pbf": "3.0.5",
    "pkg": "^3.0.5",
    "proj4": "2.4.3",
    "request": "2.81.0",
    "sharp": "0.17.3",
    "tileserver-gl-styles": "1.1.1",
    "vector-tile": "1.3.0"
  },
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "mocha": "^3.2.0",
    "should": "^11.2.0",
    "supertest": "^3.0.0"
  },
  "pkg": {
    "scripts": [
      "./src/*.js",
      "./node_modules/sharp/lib/index.js"
    ],
    "assets": [
      "./data/*",
      "./node_modules/mbtiles/lib/schema.sql",
      "./node_modules/glyph-pbf-composite/proto/glyphs.proto",
      "./node_modules/sharp/lib/*",
      "./public/**"
    ]
  }
}
